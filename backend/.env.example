# Backend Environment Variables
# Copy this file to .env and fill in your values
# For Render deployment: You can import these variables directly from this file

# MongoDB Connection String
# For local development: mongodb://localhost:27017/books-collection
# For production: Your MongoDB Atlas connection string
# Example: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/books-collection

# Server Port
# Render will automatically set this, but for local development use:
PORT=5555

# Frontend URL for CORS (comma-separated for multiple origins)
# For local development: http://localhost:5173
# For production: Your frontend URL from Render (e.g., https://book-store-frontend.onrender.com)
# You can add multiple URLs separated by commas
FRONTEND_URL=http://localhost:5173

# Node Environment
# Set to 'production' in production, 'development' for local
NODE_ENV=development
